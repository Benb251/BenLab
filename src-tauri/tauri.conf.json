{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "benlab-the-noir",
  "version": "0.1.0",
  "identifier": "com.benlab.studio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5215",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "BenLab - The Noir Experience",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}